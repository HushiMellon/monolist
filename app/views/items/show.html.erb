<% content_for :title do %>
  <%= @item.title %>-
<% end %>

<% content_for :description do %>
  <%= @item.title %>に関する情報です。この商品を欲しい人、持ってる人を表示しています。
<% end %>
<div class="container">
  <div class="container-inner inner-sm clearfix">
    <div class="item-single-main">
      <div class="image">
        <div class="img-wrap">
        
            <% if @item.large_image.nil? %><!--代入したものが空かどうか確認-->
              <%= image_tag("no-image.png" , alt: @item.title) %>  
            <% else %> 
              <%= image_tag @item.large_image , {:style => 'border: none;'} %>
            <% end %>
 
        </div>
      </div>
      <div class="title">
       <%=  @item.title %>
      </div>
      <%= render 'action' , item: @item %>
    </div>
    <div class="item-single-side">
      <div class="side-box">
        <h4 class="side-box-title">Haveしたユーザー</h4>
        <div class="side-box-body">
          <% @haves.each do |d| %>
      <%= link_to gravatar_for(d ,size: 20),d%>
      <% end %>

        </div>
      </div>
      <div class="side-box">
        <h4 class="side-box-title">Wantしたユーザー</h4>
        <div class="side-box-body">
      <% @wants.each do |d| %>
        <%= link_to gravatar_for(d,size: 20),d%>
      <% end %>
         
        </div>
      </div>
      <div class="text-center">
        <% #TODO 正しいリンク先に %>
        <%= link_to(image_tag("amazon-button.png", {alt: "Amazon詳細ページへ"}), @item.detail_page_url) %>
      </div>
    </div>
  </div>
</div>
